# alt + shift - space : sketchybar --bar hidden=toggle
# alt + shift - r : sketchybar --remove '/.*/' && sh -c 'export CONFIG_DIR=$HOME/.config/sketchybar && $CONFIG_DIR/sketchybarrc'
